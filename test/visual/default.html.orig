<!DOCTYPE html>

<head lang="en">
  <meta charset="UTF-8">
  <title></title>
  <script src="../../bower_components/webcomponentsjs/webcomponents-lite.js"></script>
  <link href="../../bower_components/polymer/polymer.html" rel="import">
  <link href="../../vaadin-input.html" rel="import">
</head>

<body>

  <custom-style>
    <style>
      fieldset {
        font-family: sans-serif;
        font-size: 16px;
        width: 550px;
        border: solid 1px grey;
      }

      div {
        position: relative;
      }

      .caret {
        position: absolute;
        background: green;
        width: 25px;
        height: 25px;
      }

    </style>
  </custom-style>

  <form>
    <fieldset id="default-tests">
      <p>
      default input: <vaadin-input></vaadin-input>
      <p>
      input with value: <vaadin-input value="Go Vaadin"></vaadin-input>
      <p>
      focused input: <div><vaadin-input autofocus id="hidden-caret"></vaadin-input><div class="caret"></div></div>
      <p>
      disabled input: <vaadin-input disabled></vaadin-input>
      <p>
      input with placeholder: <vaadin-input placeholder="Run Vaadin"></vaadin-input>
      <p>
      invalid input: <vaadin-input value minlength="4"></vaadin-input>
    </fieldset>
  </form>

</body>
